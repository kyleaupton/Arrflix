    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0",
    "dotenv": "^17.2.3",
    "pg": "^8.16.3",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/pg": "^8.16.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3"
  }
}
