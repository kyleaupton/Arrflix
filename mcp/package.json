{
  "name": "Arrflix MCP",
  "version": "0.1.0",
  "description": "Local MCP tools for Arrflix dev + ops",
  "private": true,
  "type": "module",
  "bin": {
    "Arrflix MCP": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
